{
  "defaultSeverity": "error",
  "extends": ["tslint-config-standard", "tslint-react"],
  "rules": {
    "no-trailing-whitespace": [true, "ignore-jsdoc"],
    "indent": [true, "spaces", 2],
    "quotemark": [true, "single", "jsx-double"],
    "no-floating-promises": [false], // TODO Remove it
    "jsx-no-lambda": [false], // TODO Remove it
    "jsx-no-multiline-js": [false], // TODO Remove it
    "jsx-no-bind": [false] // TODO Remove it
  }
}
